{
  "name": "tickts-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "cross-env ANALYZE=true next build",
    "build": "next build",
    "dev": "next dev",
    "lint": "eslint . --ext js --ext jsx --fix",
    "postinstall": "npm run update-git-hooks",
    "start": "next start",
    "test:all": "npm run test:e2e && npm run test:unit",
    "test:e2e": "echo \"TODO: E2E testing with Cypress.\"",
    "test:unit": "echo \"TODO: Unit testing with Jest + React Testing Library.\"",
    "update-git-hooks": "npx --no-install simple-git-hooks"
  },
  "dependencies": {
    "@chakra-ui/react": "1.6.2",
    "@emotion/react": "11.4.0",
    "@emotion/styled": "11.3.0",
    "@fontsource/poppins": "4.3.0",
    "@hookform/resolvers": "2.5.1",
    "@reach/auto-id": "0.15.0",
    "framer-motion": "4.1.17",
    "next": "10.2.2",
    "next-plugin-preact": "3.0.4",
    "preact": "10.5.13",
    "preact-render-to-string": "5.1.19",
    "react": "npm:@preact/compat@0.0.4",
    "react-dom": "npm:@preact/compat@0.0.4",
    "react-hook-form": "7.6.2",
    "swr": "0.5.6",
    "vest": "3.2.2"
  },
  "devDependencies": {
    "@axe-core/react": "4.2.0",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@next/bundle-analyzer": "10.2.2",
    "commitlint-config-gitmoji": "2.2.5",
    "cross-env": "7.0.3",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "simple-git-hooks": "2.4.1",
    "webpack": "5.37.1"
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit \"$1\"",
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint && npm run test:all"
  }
}
